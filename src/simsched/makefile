# Executable file.
EXEC=simsched

# Tweaks on toolchain.
CFLAGS += -I include

# Builds simulator.
all: *.c
	$(CC) $(CFLAGS) $^ -o $(BINDIR)/$(EXEC) $(OBJ) $(LIBS)
	
# Cleans compilation files.
clean:
	rm -f $(BINDIR)/$(EXEC)
